.hatch-header {
    overflow: hidden;
    /*background: url("../images/hatch/hatch.png") no-repeat;*/
    /*padding: 6rem 20%;*/
    background-size: 100%;
    position:relative;
    z-index:1;
}

.wrap {
    position: relative;
}

.hatch-header h1 {
    font-size: 28px;
    color: #fff;
    padding: 10px 0;

}

.hatch-header h1 span {
    font-size: 36px;
}

.hatch-header h1:first-of-type {
    margin-right: 15%;
    position:absolute;top:25%;left:50%;    -webkit-transform:translateX(-50%);
    -moz-transform:translateX(-50%);
    transform: translateX(-50%);
}

.hatch-header h1:nth-of-type(2) {
    margin-left: 15%;
position:absolute;top:40%;left:50%;    -webkit-transform:translateX(-50%);
-moz-transform:translateX(-50%);
    transform: translateX(-50%);
}

.hatch-header img {
    width: 100%;
}

.hatch-header input {
    position: absolute;
    z-index:20;
    top: 75%;
    left: 50%;
    -webkit-transform:translateX(-50%);
    -moz-transform:translateX(-50%);
    transform: translateX(-50%);
    border: 0;
    border-radius: 25px;
    font-size:17px;
    padding: .8% 5%;
}

.hatch-main h1 {
    font-size: 28px;
    font-weight: 600;
    padding: 5% 0 10px 0;
}

.hatch-main h4 {
    padding: 15px 0;
    font-weight: 600;
}

.hatch-main p {
    color: #666666;
    font-size: 16px;
    padding: 0 20px;
}

.hatch-partner {
    padding: 5% 0 5% 0;
}

/*.hatch-partner img{*/
/*width: 10%;*/
/*}*/

.hatch-partner p {
    text-align: left;
}

.hatch-module {
    padding: 5% 0 5% 0;
}

.hatch-module p {
    text-align: left;
}

.hatch-people {
    padding: 5% 0 5% 0;
}

.hatch-people img {
    width: 60%;
}

.hatch-people p {
    text-align: left;
}

.hatch-mate {
    margin-top: 5%;
    padding: 5% 0 5% 0;
}

.hatch-mate img {
    width: 70%;
}

.width-2 {
    display: inline-block;
    width: 19%;
}
.width-27{
    display: inline-block;
    width: 228px;
    height:330px;
    font-size:16px;
    vertical-align:middle;
}

.width-25 {
    display: inline-block;
    width: 25%;
    padding: 0 10px;
}

.btn-Check {
    border: 0;
    border-radius: 5px;
    font-size: 14px;
    color: #fff;
    background: #f39732;
    padding: 5px 15px;
}

/*轮播图开始*/
.experience {
    overflow: hidden;
    width: 100%;
    padding-bottom: 4.4rem;
    text-align: center;
    background-color: #fff;
}

.experience .container > .row > h1 {
    padding-top: 4.2rem;
    padding-bottom: 3rem;
    font-size: 1.4rem;
}

/* Circular Content Carousel Style */
#success-case {
    margin-top: 3%;
}

#success-case {
    margin-bottom: 4.2rem;
}

#success-case .carousel-inner {
    width: 86%;
    margin: 0 auto;
}

#success-case .carousel-control {
    width: 5%;
}

#success-case .carousel-control {
    width: 5%;
}

#success-case h1 {
    padding-top: 2rem;
    padding-bottom: 0.5rem;
    font-size: 12px;
    color: #000;
}

#success-case p {
    height: 72px;
    padding-left: 2rem;
    padding-right: 2rem;
    text-align: justify;
    font-size: 12px;
    color: #6b6767;
    overflow: hidden;
    text-overflow: ellipsis;
}

#success-case .success-case-left,
#success-case .success-case-middle,
#success-case .success-case-right {
    /*display: inline-block;*/
    overflow: hidden;
    width: 30%;
    margin: 2px 1.6%;
    max-width: 300px;
    border-radius: 8px;
    padding: 0;
    background: #fff;
    -webkit-box-shadow: 0 0 10px rgba(224, 224, 224, .5);
    -moz-box-shadow: 0 0 10px rgba(224, 224, 224, .5);
    box-shadow: 0 0 10px rgba(224, 224, 224, .5);
}

#success-case .success-case-left img,
#success-case .success-case-middle img,
#success-case .success-case-right img {
    width: 100%;
}

#success-case .carousel-indicators li {
    width: 12px;
    height: 12px;
    margin: 8px;
    border: 1px solid #1495d7;
}

#success-case .carousel-indicators .active {
    background-color: #1495d7;
    width: 12px;
    height: 12px;
    margin: 8px;
}

#success-case .banner-next,
#success-case .banner-pre {
    background-color: #fff;
    z-index: 100;
    -webkit-box-shadow: 0 0 10px 5px rgba(240, 240, 240, .5);
    -moz-box-shadow: 0 0 10px 5px rgba(240, 240, 240, .5);
    box-shadow: 0 0 10px 5px rgba(240, 240, 240, .5);
}

#success-case .banner-pre {
    left: 0;
}

#success-case .banner-next {
    right: 0;
}

#success-case .carousel-indicators {
    bottom: -4.5rem;
}

@media screen and (max-width: 1199px) and (min-width: 992px) {
    #success-case p {
        padding-left: 0.5rem;
        padding-right: 0.5rem;
    }

    #success-case .success-case-left,
    #success-case .success-case-middle,
    #success-case .success-case-right {
        overflow: hidden;
        max-width: 315px;
        border-radius: 8px;
    }

}

@media screen and (max-width: 991px) {
    #success-case .success-case-left,
    #success-case .success-case-middle,
    #success-case .success-case-right {
        width: 100%;
        margin: 1rem auto;
        float: none;
    }
}

.carousel-control.left, .carousel-control.right {
    background-image: none;
}

/*轮播图结束*/

@media screen and (max-width: 767px) {
    .hatch-header input{
        top:50%;
        font-size:13px;
    }


    .hatch-partner p {
        text-align: center;
    }

    .hatch-people .width-2 {
        display: block;
        width: 100%;
    }

    .hatch-people img {
        width: 150px;
    }
}