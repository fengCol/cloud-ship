/* 左边 */
.user-content {
    width: 100%;
    padding-top: 2.1rem;
    padding-bottom: 2rem;
    background-color: #f8f8f8;
}

.user-tab {
    padding-top: 3.3rem;
    padding-bottom: 4.3rem;
    font-size: 1.6rem;
    background-color: #fff;
    border: 1px solid #e8e8e8;
}

.user-tab li h4 {
    padding: 10px 0 10px 0;
    margin-left: 5px;
    font-weight: 800;
    font-size: 2rem;
}

.user-tab li a {
    display: block;
    text-decoration:none;
    margin-left: 5px;
    padding: 10px 0 10px 0;
    cursor: pointer;
    color: #666666;
}

.user-tab-li:hover {
    margin-left: 0;
    border-left: 5px solid #4ea4fe;
    color: #59aafe;
    background-color: #f8f8f8;
}

.user-tab-hover{
    margin-left: 0;
    border-left: 5px solid #4ea4fe;
    color: #59aafe;
    background-color: #f8f8f8;
}

.user-tab-hover a{
    color: #59aafe !important;

}

.user-right {
    border: 1px solid #e8e8e8;
    background-color: #fff;
    overflow: hidden;
    min-height:660px;
}
@media screen and (max-width: 1000px) {
    .user-tab li h4,
    .user-tab li a {
        padding: 10px 0 10px 0;
    }
}