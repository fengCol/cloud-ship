.about-content {
    background-color: #f2f5f7;
}

.clear-pd {
    padding-left: 0;
    padding-right: 0;
}

.tab-content {
    background: #fff;
}

.about-we {
    padding: 0 10% 5% 10%
}

.about-we h1 {
    font-size: 20px !important;
    padding: 40px 0 !important;
    font-weight: 600 !important;
    color: #333 !important;
}

.tab-content .about-we p {
    color: #666666;
    font-size: 14px;
    line-height: 2em;
    padding-bottom:0 !important;
    width:100%;
    text-align:left;
    margin:0;
}

.about-we p:nth-of-type(2) {
    padding-top: 50px;
    padding-bottom:0 !important;
}

.about-logoMain p {
    padding: 10px 0 0 0;
    text-align: center !important;
}

.about-logo {
    display: inline-block;
    width: 24%;
    text-align: center;
    padding-bottom: 5%;
}

.about-logo img {
    width: 60%;
    max-width: 120px;
}

.about-map img {
    width: 100%;
}

@media screen and (max-width: 320px) {
    .about-logo {
        padding-top: 10px;
    }

    .about-logo {
        width: 100% !important;
    }

    .about-logo img {
        width: 40%;
    }
}

@media screen and (max-width: 768px) {
    .about-logo {
        width: 48%;
    }
}