/*apply-content start*/
.apply-content {
    overflow: hidden;
    padding-top: 2rem;
    background-color: #f2f5f7;
}

/*apply-flow start*/
.apply-flow {
    overflow: hidden;
    margin-left: 18.803%;
    margin-bottom: 2rem;
}

.apply-flow > ul > li {
    position: relative;
    float: left;
    margin-right: 4.25rem;
    width: 4.3rem;
    height: 4.3rem;
    padding-top: 31px;
    font-size: 0.7rem;
    text-align: center;
    color: #1495d7;
    border-radius: 50%;
    border: 1px solid #1495d7;
}

.apply-flow-special {
    padding-top: 1.2rem !important;
}

.apply-flow > ul > li > span {
    position: absolute;
    left: 5.25rem;
    top: 1rem;
}

.apply-flow-active {
    color: #fff !important;
    background-color: #1495d7;
}

/*apply-flow over*/
/*tab-apply start*/
.tab-apply {
    overflow: hidden;
    padding: 4.27% 10.256%;
    margin-bottom: 2.5rem;
    font-size: 0.8rem;
    color: #434242;
    background-color: #fff;
}

.tab-apply h1 {
    font-size: 0.9rem;
    color: #000;
    padding-left: 0.675%;
    padding-bottom: 0.9rem;
    border-bottom: 1px solid #d9d9d9;
}

.tab-apply #err {
    height: 20px;
    font-size: 16px;
    margin-top: 1.1rem;
    color: red;
    padding-left: 10.675%;
}

/*apply-form start*/
.apply-form > div {
    margin-top: 1.1rem;
}

.apply-form > div > span {
    display: inline-block;
    padding-left: 0.675%;
    padding-right: 0.4rem;
    color: #2c2b2b;
}

.apply-form > div > input:focus,
.apply-form > div > select:focus {
    outline: none;
    padding-top: 0;
    padding-bottom: 0;
    border: 1px solid #1495d7;
}

.apply-form > div > input {
    margin-right: 3.763%;
    padding-left: 10px;
    height: 1.65rem;
    border: 1px solid #d2d0d0;
}

.apply-form > div > select {
    width: 15.4%;
    height: 1.65rem;
    margin-right: 1rem;
    padding-left: 0.5rem;
    font-size: 0.6rem;
    color: #2c2b2b;
    appearance: none;
    -moz-appearance: none;
    -ms-appearance: none;
    -o-appearance: none;
    -webkit-appearance: none;
    background: url(../images/select-down.png) no-repeat right 10px center;
    background-size: 10px 7px;
    border: 1px solid #d2d0d0;
}

#applyTime {
    padding-left: 0.5rem;
    background: url(../images/writedaily.png) no-repeat right 10px center;
    background-size: 23px 23px;
}

/*apply-form start*/

#applyServer {
    width: 6.6rem;
    margin-top: 2.2258%;
    margin-left: 10.75%;
    padding-top: 0.4rem;
    padding-bottom: 0.4rem;
    color: #fff;
    border: none;
    background-color: #f0636a;
}

#applyServer:focus {
    outline: none;
}

.warning {
    border: 1px solid red !important;
}

/*success-remind start*/
.remind {
    overflow: hidden;
    display: none;
    padding: 16.325% 42.73%;
    margin-bottom: 2.5rem;
    font-size: 1.2rem;
    color: #2ab464;
    background-color: #fff;
    border-radius: 0.5rem;
}

.remind span {
    padding-left: 0.3rem;
}

/*success-remind over*/
/*tab-apply over*/
/*apply-content over*/
@media screen and (min-width: 1200px) {
    .text-nameWidth,
    .text-phoneWidth,
    .text-qqWidth,
    #applyTime {
        width: 30.2%;
    }

    .text-companyWidth {
        width: 74.7%;
    }

    .apply-form > div > select {
        width: 14.4%;
        margin-right: 0.4rem;
    }

    .appointment-time {
        margin-left: 2.3%;
    }
}

@media screen and (max-width: 1199px) and (min-width: 992px) {
    .text-nameWidth,
    .text-phoneWidth,
    .text-qqWidth,
    #applyTime {
        width: 30.2%;
    }

    .text-companyWidth {
        width: 76.7%;
    }

    .apply-form > div > select {
        width: 14.4%;
        margin-right: 0.4rem;
    }

    .appointment-time {
        margin-left: 1.8%;
    }
}

@media screen and (max-width: 991px) and (min-width: 768px) {
    .apply-flow {
        width: 4.3rem;
        margin: 0 auto;
    }

    .apply-flow ul li span {
        top: 91px;
        left: 25px;
    }

    .apply-flow ul li {
        margin-bottom: 53px;
    }

    .remind {
        padding: 16.325% 30%;
    }

    .apply-form {
        padding-top: 1.1rem;
    }

    .apply-form > div {
        margin-top: 0;
    }

    .apply-form > div > span {
        width: 20%;
    }

    .apply-form > div > select,
    .apply-form > div > input {
        margin-top: 0;
        margin-bottom: 1rem;
    }

    .apply-form > div > input {
        width: 65%;
    }

    .apply-form > div > select {
        width: 30.4%
    }
}

@media screen and (max-width: 767px) {
    .apply-flow {
        width: 4.3rem;
        margin: 0 auto;
    }

    .apply-flow ul li span {
        top: 91px;
        left: 25px;
    }

    .apply-flow ul li {
        margin-bottom: 53px;
    }

    .remind {
        padding: 16.325% 30%;
    }

    .apply-form {
        padding-top: 1.1rem;
    }

    .apply-form > div {
        margin-top: 0;
    }

    .apply-form > div > select,
    .apply-form > div > input {
        margin-top: 0;
        margin-bottom: 1rem;
    }

    .apply-form > div > input,
    .apply-form > div > select {
        width: 100%;
    }
}


