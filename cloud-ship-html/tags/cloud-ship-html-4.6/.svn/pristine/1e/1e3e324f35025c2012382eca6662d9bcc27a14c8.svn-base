.homepage-wrap span{
    color:#2c97de
}
.homepage-wrap{
    font-size:14px;
}
.homepage-wrap{
    border-bottom:1px solid #e8e8e8;
}
.homepage-user-detail-wrap{
    padding-top:20px;
    color:#666666;
}
.homepage-user-detail-wrap li{
    display:inline-block
}
.homepage-bottom-btn-wrap{
    color:#666666;
}
.homepage-bottom-btn-wrap li:nth-child(1){
    padding-right:29px;
    border-right:1px solid #d9d9d9;
}
.homepage-bottom-btn-wrap li:nth-child(2),.homepage-bottom-btn-wrap li:nth-child(3){
    padding:0 29px;
}
.homepage-bottom-btn-wrap li:nth-child(2){
    border-right:1px solid #d9d9d9;

}

.user-li-1{
    padding-right:23px;border-right:1px solid #d9d9d9;
}

.user-li-2{
    padding-left:23px;
}

/*.homepage-user-detail-wrap li:nth-child(2){*/
    /*padding-left:50px;*/
/*}*/

.home-icon-write{
    width:16px;
    height:16px;
    display: inline-block;
    margin:0 5px;
    background:url('../../images/homepage-icon-write.png') no-repeat;
}
.home-icon-company{
    display: inline-block;
    width:20px; height:20px;
    background: url('../../images/homepage-icon-company.png') no-repeat center;
    white-space:nowrap;
    letter-spacing: -1em;
    text-indent: -99em;
    color: transparent;
}
.home-icon-company:before{
    content: '\3000';
}

.home-icon-message{
    display: inline-block;
    width:20px; height:20px;
    background:url('../../images/homepage-icon-message.png') no-repeat;
    white-space:nowrap;
    letter-spacing: -1em;
    text-indent: -99em;
    color: transparent;


}
.home-icon-message:before{
    content: '\3000';

}


.home-icon-service{
    display: inline-block;
    width:15px; height:13px;
    background:url('../../images/homepage-icon-service.png') no-repeat;
    white-space:nowrap;
    letter-spacing: -1em;
    text-indent: -99em;
    color: transparent;

}
.home-icon-service:before{
    content: '\3000';
}

.home-page-li {
    display: inline-block;
}
.padding-top-20 {
    padding-top:20px;
}

@media screen and (max-width:767px){
    .homepage-bottom-btn-wrap li:nth-child(2), .homepage-bottom-btn-wrap li:nth-child(3){
        padding:0;
        border-right:0;
        margin-top:10px;
    }
    .homepage-bottom-btn-wrap li:nth-child(1){
        padding:0;
        border-right:0;

    }
    .homepage-user-detail-wrap{
        padding-top:10px;
    }


    .user-li-1{
        padding-right:0;border-right:0;
    }

    .user-li-2{
        padding-left:0;
    }

}

@media screen and (max-width:475px){
    .home-icon-message,.home-icon-service,.home-icon-company,.home-icon-write{
        margin-left:0;
    }
    .homepage-bottom-btn-wrap li{
        width:100%;
        padding-top:10px;
    }
    .homepage-user-detail-wrap li{
        width:100%;
    }
    .homepage-user-detail-wrap li:nth-child(2){
        padding-left:0;
        padding-top:10px;

    }
    .homepage-img-wrap{
        text-align: center  ;
    }
    .home-page-user-wrap{
        padding-top:20px;
    }
}
